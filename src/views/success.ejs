<div
  style="
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
  "
>
  <h1 style="font-weight: lighter; color: rgba(0, 0, 0, 0.5)">
    Welcome <%= name %>
  </h1>
  <form method="get" action="/logout">
    <button
      style="
        margin-top: 20px;
        padding: 10px;
        font-size: 15px;
        background: transparent;
        border: 1px solid #6577b3;
        color: #6577b3;
        cursor: pointer;
        transition: background-color 300ms, color 300ms;
      "
      onmouseover="this.style.backgroundColor='#6577B3'; this.style.color='white';"
      onmouseout="this.style.backgroundColor='transparent'; this.style.color='#6577B3';"
      type="submit"
    >
      Logg ut
    </button>
  </form>
</div>
